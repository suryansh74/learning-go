pipeline {
    agent {
        docker {
            image 'golang'
            args '-u root'
        }
    }
    environment {
        VERSION = "20.3.12"
        RELEASE_VERSION = "R.2"
    }
    stages {
        stage("Audit tools") {
            steps {
                sh '''
                    go version
                    printenv
                    ls -l "$WORKSPACE"
                '''
            }
        }
    }
}