pipeline {
    agent {
        docker {
            image 'golang'
            args '-u root'
        }
    }
    environment {
        VERSION = "20.3.12"
        RELEASE_VERSION = "R.2"
    }
    stages {
        stage("Audit tools") {
            steps {
                sh '''
                    go version
                    printenv
                    ls -l "$WORKSPACE"
                '''
            }
        }
        stage("Test") {
            steps {
                sh "go test ./... -v"
            }
        }
        stage("Deploy") {
            steps {
                script {
                    // First, ask for environment
                    def targetEnv = input(
                        message: "Select Target Environment",
                        ok: "Continue",
                        parameters: [
                            string(name: "TARGET_ENVIRONMENT", defaultValue: "PROD", description: "Target environment (e.g., DEV, QA, PROD)")
                        ]
                    )

                    def majorChanges = false

                    // If not PROD, ask for the boolean
                    if (targetEnv != "PROD") {
                        majorChanges = input(
                            message: "Do you want to enable Major Changes?",
                            ok: "Continue",
                            parameters: [
                                booleanParam(name: "MAJOR_CHANGES", defaultValue: false, description: "Check for Major Changes")
                            ]
                        )["MAJOR_CHANGES"]
                    }

                    if (majorChanges) {
                        echo "User selected Major Changes → Going to 'Major Changes' stage"
                        // Place major changes logic here
                    } else {
                        echo "No Major Changes selected → Going to 'My Images' stage"
                        // Place my images logic here
                    }

                    echo "Deploying release ${RELEASE_VERSION} to environment ${targetEnv}"
                }
            }
        }
    }
    post {
        always {
            echo "Prints always whether deployed successful or not"
        }
    }
}