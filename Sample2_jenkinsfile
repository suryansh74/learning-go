pipeline {
    agent any
    environment {
        RELEASE = "20.3.12"
    }
    stages {
        stage("Build") {
            environment {
                LOG = "INFO"
            }
            steps {
                echo "Building release ${RELEASE} with log level ${LOG}"
            }
        }
        stage("Test") {
            steps {
                echo "Testing here with release of ${RELEASE}"
            }
        }
        stage("Deploy") {
            steps {
                script {
                    def TARGET_ENVIRONMENT = input(
                        message: "Deploy?",
                        ok: "Do It!",
                        parameters: [
                            string(name: "TARGET_ENVIRONMENT", defaultValue: "PROD", description: "Target Development environment")
                        ]
                    )
                    echo "Deploying release ${RELEASE} to environment ${TARGET_ENVIRONMENT}"
                }
            }
        }
    }
    post {
        always {
            echo "Prints always whether deployed successful or not"
        }
    }
}
