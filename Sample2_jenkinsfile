pipeline {
    agent any
    environment {
        RELEASE="20.3.12"
    }
    stages {
        stage("Build") {
            agent any
            environment {
               LOG="INFO" 
            }
            steps {
                echo "Building release ${RELEASE} with log level ${LOG}"
            }
        }
        stage("Test") {
            steps {
                echo "Testing here with release of ${RELEASE} and log level ${LOG}"
            }
        }
    }
}